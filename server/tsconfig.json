{
  "compilerOptions": {
    "allowJs": true,
    "target": "es6",
    "lib": ["es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "suppressImplicitAnyIndexErrors": true,
    "pretty": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "src": ["./src/*"],
      "universal/*": ["../universal/src/*"]
    }
  }
}
